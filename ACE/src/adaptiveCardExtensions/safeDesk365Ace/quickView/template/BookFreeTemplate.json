{
  "type": "AdaptiveCard",
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.3",
  "body": [
    {
        "type": "Container",
        "items": [
            {
                "type": "TextBlock",
                "text": "Here is your free desk:",
                "wrap": true
            },
            {
                "type": "Image",
                "style": "default",
                "url": "${deskAvailability.picture}",
                "altText": "${deskAvailability.description}",
                "size": "Small"
            },
            {
                "type": "FactSet",
                "facts": [
                  {
                    "title": "Desk code:",
                    "value": "${deskAvailability.code}"
                  },
                  {
                    "title": "Description:",
                    "value": "${deskAvailability.description}"
                  },
                  {
                    "title": "Coffee machine:",
                    "value": "${deskAvailability.coffeeMachineDistance} meters"
                  }
                ]
            }
        ]
    }
  ],
  "actions": [
    {
      "type": "Action.Submit",
      "title": "Book!",
      "id": "Submit",
      "data":{
      }
    }
  ]
}