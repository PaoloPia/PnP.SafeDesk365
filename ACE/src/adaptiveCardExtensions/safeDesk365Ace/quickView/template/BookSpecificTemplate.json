{
  "type": "AdaptiveCard",
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.3",
  "body": [
      {
          "type": "Container",
          "items": [
                {
                    "type": "TextBlock",
                    "text": "Choose your desk:",
                    "wrap": true
                },
                {
                "type": "Input.ChoiceSet",
                "choices": [
                    {
                        "$data": "${desks}",
                        "title": "${code}",
                        "value": "${code}"
                    }
                ],
                "placeholder": "Select desk",
                "id": "specificDesk"
            }
        ]
      }
  ],
  "actions": [
    {
        "type": "Action.Submit",
        "title": "Book!",
        "id": "Submit",
        "data": {
            "specificDesk": "{{specificDesk.value}}"
        }
    }
  ]
}