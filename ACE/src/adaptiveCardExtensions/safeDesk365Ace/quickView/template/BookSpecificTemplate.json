{
  "type": "AdaptiveCard",
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.3",
  "body": [
      {
          "type": "Container",
          "items": [
              {
                  "type": "TextBlock",
                  "text": "Choose your desk:",
                  "wrap": true
              },
              {
                "type": "Input.ChoiceSet",
                "choices": [
                    {
                        "$data": "${$root['locations']}",
                        "title": "${name} [${address}]",
                        "value": "${id}"
                    }
                ],
                "placeholder": "Select location",
                "id": "specificDeskLocation"
            },
            {
                "type": "Input.Date",
                "id": "specificDeskDate"
            },
            {
                "type": "Input.ChoiceSet",
                "choices": [
                    {
                        "$data": "${$root['desks']}",
                        "title": "${description}",
                        "value": "${code}"
                    }
                ],
                "placeholder": "Select desk",
                "id": "specificDeskDesk"
            }
        ]
      }
  ]
}